<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%=h page_title %></title>
    <%= page_header %>
    <%= stylesheet_link_tag '/stylesheets/theme/application.css', :media => 'all' %>
    <link rel='index' title='<%= this_blog.blog_name %>' href='<%= this_blog.base_url %>' />
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
  <header id="logo">
    <hgroup>
      <h1><%= this_blog.blog_name %></h1>
      <h2><%= this_blog.blog_subtitle %></h2>
    </hgroup>
    <section id="date">
        <h1 style="display:none">Actual date</h1>
      <%= _('Today is') %> <%= Date.today.to_s%>
    </section>
  </header>
  <div id="wrapper">
    <nav id="navigation">
        <h1 style="display:none">Navigation</h1>
      <ul>
        <li>
          <%= link_to _("Home"), this_blog.base_url %>
        </li>
        <li>
          <%= link_to _("Archives"), {:controller => "articles", :action => "archives"}, :rel => 'archives' %>
        </li>
        <li>
          <%= link_to _("About"), this_blog.base_url + "/pages/about", :rel => 'author' %>
        </li>
      </ul>
      <% form_tag({:controller => 'articles',  :action => 'search'}, {:method => 'get', :id => 'searchform'}) do %>
        <input type="text" id="s" name="q" value="" size="15" />
        <input id="searchsubmit" type='submit' value='<%= _("Search") %>' />
      <% end %>
    </nav>
    <div id="content">
      <div id="content-inner">
        <%= @content_for_layout %>
      </div>
      <aside id="boxes">
        <header style="display:none">
          <h1>Sideboxes</h1>
        </header>
        <!-- sidebar components -->
        <%= render_sidebars %>
      </aside>
    </div>
  </div>
  <footer id="footer">
    <section id="about-author">
      <h1>About author</h1>
      <p>Something about author.</p>
      <address><%= link_to _('CONTACT'), this_blog.base_url + '/contact' %></address>
      <span><%= link_to _('LICENCE'), this_blog.base_url + '/license', :rel => 'license' %></span>
    </section>
    <section id="subscribe">
      <h1>RSS</h1>
      <ul>
        <li><a href="<%= url_for :controller => 'articles', :action => 'index', :format => 'atom' %>" title="Articles feed"><%= _("Articles")%></a></li>
        <li><a href="<%= formatted_admin_comments_url('atom') %>" title="Comments feed"><%= _("Comments")%></a></li>
      </ul>
    </section>
    <section id="copyright">
      <h1 style="display:none">Made by</h1>
      Made by <%= link_to "Tibor Pino", "http://blueweb.rockretail.com",{:target => :new} %>, Icons by <%= link_to "Profimgazin.cz", "http://www.profimagazin.cz/ikony/dalsi-sada-socialnich-ikon-ke-stazeni-zdarma",{:target => :new} %>
    </section>
  </footer>
</body>
</html>