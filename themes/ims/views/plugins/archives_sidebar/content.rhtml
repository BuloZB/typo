<section>
  <h1><%= _("Archives")%></h1>
  <% unless sidebar.archives.blank? %>
    <ul>
      <% sidebar.archives.each do |month| %>
        <li>
          <%= link_to month[:name], articles_by_month_path(month[:year], "%02i" % month[:month]) %>
          <%= "<em>(#{month[:article_count]})</em>" if show_count %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>