<article class="comment preview">
  <header>
    <h1 class="hidden">Comment #<%= @comment.id %></h1>
    <%= content_tag(:div, gravatar_tag(@comment.email)) if this_blog.use_gravatar and @comment.email %>
    <cite><%= (@comment.url.blank?) ? h(@comment.author) : link_to(h(@comment.author), @comment.url) %></cite>
    <time datetime="<%= @comment.created_at.strftime('%Y-%m-%dT%H:%M') %>" pubdate><%= distance_of_time_in_words @comment.created_at, Time.now %> <%= _("later")%>:</time>
  </header>
  <div class="content">
    <%= @comment.html %>
  </div>
</article>
