<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%=h page_title %></title>
    <link rel='index' title='<%= this_blog.blog_name %>' href='<%= this_blog.base_url %>'>
    <%= page_header %>
    <%= stylesheet_link_tag '/stylesheets/theme/style', :media => 'all' %>
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
  <header id="logo">
    <hgroup>
      <h1><%= this_blog.blog_name %></h1>
      <h2><%= this_blog.blog_subtitle %></h2>
    </hgroup>
    <section id="date">
      <h1 class="hidden">Actual date</h1>
      <%= _('Today is') %> <%= Date.today.strftime('%d. %m. %Y') %>
    </section>
  </header>
  <div id="wrapper">
    <nav id="navigation">
      <h1 class="hidden">Navigation</h1>
      <ul>
        <li>
          <%= link_to _("Home"), this_blog.base_url %>
        </li>
        <li>
          <%= link_to _("Archives"), {:controller => "articles", :action => "archives"}, :rel => 'archives' %>
        </li>
        <li>
          <%= link_to _("About"), this_blog.base_url + "/pages/about", :rel => 'author' %>
        </li>
        <li>
          <%= link_to _("Offline version"), this_blog.base_url + "/offline/index.html" %>
        </li>
      </ul>
    </nav>
    <div id="content">
      <div id="content-inner">
        <%= @content_for_layout %>
      </div>
      <aside id="boxes">
        <h1 class="hidden">Sideboxes</h1>
        <!-- sidebar components -->
        <%= render_sidebars %>
      </aside>
    </div>
  </div>
  <footer id="footer">
    <section id="about-author">
      <h1>About author</h1>
      <p>Tibor Pino is a student at <%= link_to "VSB TU Ostrava" , "http://www.vsb.cz" %> and currently living in Cadca and working in <%= link_to "Galileo Agency", "http://www.galileoagency.sk" %>.</p>
      <address><%= mail_to "tibor.pino@gmail.com" %></address>
    </section>
    <section id="subscribe">
      <h1>RSS</h1>
      <ul>
        <li><a href="<%= url_for :controller => 'articles', :action => 'index', :format => 'atom' %>" title="Articles feed"><%= _("Articles")%></a></li>
        <li><a href="<%= formatted_admin_comments_url('atom') %>" title="Comments feed"><%= _("Comments")%></a></li>
      </ul>
    </section>
    <section id="copyright">
      <h1 class="hidden">Made by</h1>
      Made by <%= link_to "Tibor Pino", "http://blueweb.rockretail.com",{:target => :new} %>
    </section>
  </footer>
</body>
</html>