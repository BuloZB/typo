<!DOCTYPE HTML>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%=h page_title %></title>
    <%#= page_header %>
    <%= stylesheet_link_tag '/stylesheets/theme/application.css', :media => 'all' %>
    <link rel='index' title='<%= this_blog.blog_name %>' href='<%= this_blog.base_url %>' />
    <!--[if IE]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
  <svg preserveAspectRatio="none"
       viewBox="0 0 100 100"
       style="width:100%; height:100%; position:fixed; top:0; left:0; z-index:1">
    <linearGradient id="blue_black" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:rgb(87,44,38);stop-opacity:1"/>
      <stop offset="60%" style="stop-color:rgb(00,00,00);stop-opacity:1"/>
    </linearGradient>
    <rect x="0" y="0" width="100" height="100" fill="url(#blue_black)" />
  </svg>

  <div id="wrapper">
    <header id="header">
      <hgroup>
        <h1><%= this_blog.blog_name %></h1>
        <h2><%= this_blog.blog_subtitle %></h2>
      </hgroup>
    </header>
    <svg id="current-date">
      <linearGradient id="green_green" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:rgb(146,185,113);stop-opacity:1"/>
        <stop offset="100%" style="stop-color:rgb(61,130,54);stop-opacity:1"/>
      </linearGradient>
      <g>
        <rect
          width="100%"
          height="3em"
          rx="10"
          ry="10"
          x="0"
          y="0"
          style="fill:url(#green_green);fill-opacity:1" />
        <foreignObject x="0" y="0" width="100%" height="100%">
          <body xmlns="http://www.w3.org/1999/xhtml">
          <section id="date"><%= _('Today is ') %> <%= Date.today.to_s%></section>
          </body>
        </foreignObject>
      </g>
    </svg>
    <svg id="navigation">
      <defs id="defs1">
        <linearGradient id="blue_gray" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:rgb(50,105,122);stop-opacity:1"/>
          <stop offset="100%" style="stop-color:rgb(42,56,65);stop-opacity:1"/>
        </linearGradient>
        <linearGradient id="gray_gray" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:rgb(139,139,139);stop-opacity:1"/>
          <stop offset="100%" style="stop-color:rgb(221,221,221);stop-opacity:1"/>
        </linearGradient>
        <style type="text/css">
          a:hover {
            fill: #ffffff;
          }
          a {
            fill: #ffffff;
          }
        </style>
        <linearGradient id="blue_gray_small" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:rgb(50,105,122);stop-opacity:1"/>
          <stop offset="100%" style="stop-color:rgb(42,56,65);stop-opacity:1"/>
        </linearGradient>
        <style type="text/css">
          text {
            fill: #ffffff;
          }
        </style>
      </defs>
      <g id="menu">
        <rect
          width="100%"
          height="3em"
          rx="10"
          ry="10"
          x="0"
          y="0"
          id="rect1"
          style="fill:url(#blue_gray);fill-opacity:1" />
        <foreignObject x="0" y="0" width="100%" height="100%">
          <body xmlns="http://www.w3.org/1999/xhtml">
          <nav id="navigation">
            <ul>
              <li>
                <%= link_to _("Home"), this_blog.base_url %>
              </li>
              <li>
                <%= link_to _("Archives"), {:controller => "articles", :action => "archives"}, :rel => 'archives' %>
              </li>
              <li>
                <%= link_to _("About"), this_blog.base_url + "/pages/about", :rel => 'author' %>
              </li>
            </ul>
          </nav>
          </body>
        </foreignObject>
      </g>
    </svg>
    <div id="content">
      <%= @content_for_layout %>
    </div>
    <aside id="boxes">
      <header style="display:none">
        <h1>Sideboxes</h1>
      </header>
      <!-- sidebar components -->
      <%= render_sidebars %>
    </aside>
    <svg>
      <g>
        <rect
          width="100%"
          height="3em"
          rx="10"
          ry="10"
          x="0"
          y="0"
          style="fill:url(#blue_gray);fill-opacity:1" />
        <foreignObject x="0" y="0" width="100%" height="100%">
          <body xmlns="http://www.w3.org/1999/xhtml">
          <footer id="footer">
            Made by <%= link_to "Tibor Pino", "http://blueweb.rockretail.com",{:target => :new} %>
          </footer>
          </body>
        </foreignObject>
      </g>
    </svg>
  </div>
</body>
</html>